rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Receipt photos - alleen ingelogde gebruikers
    match /receipt-photos/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Avatar photos - publiek leesbaar, schrijven door eigenaar
    match /avatars/{avatarFile} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Management fee templates - alleen eigen bestanden
    match /management-fee-templates/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
