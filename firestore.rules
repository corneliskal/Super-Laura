rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Receipts collection - open access (no auth for now)
    match /receipts/{receiptId} {
      allow read, write: if true;
    }

    // Submissions collection - open access (no auth for now)
    match /submissions/{submissionId} {
      allow read, write: if true;
    }

    // Travel expenses collection - open access (no auth for now)
    match /travel_expenses/{expenseId} {
      allow read, write: if true;
    }

    // Travel submissions collection - open access (no auth for now)
    match /travel_submissions/{submissionId} {
      allow read, write: if true;
    }
  }
}
